{% extends 'base.html.twig' %}

{% block title %}Lista Participantes{% endblock %}

{% block body %}
<div class="container">
    <p></p>
    <div class="row">
        <div class="col-8">
            <h3>Lista de Participantes</h3>
        </div>
        <div class="col-4">
            <button type="button" id="" class="btn btn-outline-success btn-block" onclick=location.href="{{ path('participante_new')}}" > <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-plus-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M14 1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                    <path fill-rule="evenodd" d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                </svg> Nuevo Participante
            </button>
            {#  <a href="{{ path('participante_new') }}">Create new</a> #}
        </div>
    </div>
    <p></p>


    <table id="myTableP" class="table table-striped table-bordered" >

        <thead class="thead-dark">
            <tr>

                <th>Nombre</th>
                <th>Email</th>
                <th>Escudo</th>
                <th>Accion</th>
            </tr>
        </thead>
        <tbody>
        {% for participante in participantes %}
            <tr>

                <td><h6>{{ participante.nombre }}</h6></td>
                <td><h6>{{ participante.email }}</h6></td>
                <td>{{ participante.imagen }} //imagen// </td>

                <td>
                    {#  <a href="{{ path('participante_show', {'id': participante.id}) }}">show</a> #}
                    <button type="button" id="" class="btn btn-warning btn-block" onclick=location.href="{{ path('participante_edit', {'id': participante.id}) }}"><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-pencil-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
                        </svg> Editar
                    </button>

                    <button type="button" id="" class="btn btn-danger btn-block" onclick=location.href="{{ path('participante_delete', {'id': participante.id}) }}"><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-x-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M14 1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                            <path fill-rule="evenodd" d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                        </svg> Eliminar
                    </button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">NO SE ENCONTRARON PARTICIPANTES</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <p></p>
    <hr>
      <div class="row">
          <div class="col-3">
          </div>
          <div class="col-6">

        <button type="button" class="btn btn-info btn-block" onclick=location.href="{{ path('competencia_deportiva_index') }}"> <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-left-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5z"/>
            </svg> Volver a Listar Competecias</button>
          </div>

      </div>
</div>

{% endblock %}
{% block javascripts %}

    <script type="text/javascript">
        console.log('JavaScript Listar Participantes Funcionando');

        $('#myTableP').DataTable({
            "language": {
                "decimal":        "",
                "emptyTable":     "No hay Participantes para mostrar...",
                "info":           "Mostrando Participantes del _START_ al _END_ de _TOTAL_ Participantes",
                "infoEmpty":      "Mostrando 0 de 0 de 0 Participantes",
                "infoFiltered":   "(Filtrado de un total de _MAX_ Participantes)",
                "infoPostFix":    "",
                "thousands":      ",",
                "lengthMenu":     "Mostrar _MENU_ Participantes",
                "loadingRecords": "Cargando...",
                "processing":     "Procesando...",
                "search":         "Buscar:",
                "zeroRecords":    "No se encontraron participantes..",
                "paginate": {
                    "first":      "Primero",
                    "last":       "Ultimo",
                    "next":       "Siguiente",
                    "previous":   "Anterior"
                },
                "aria": {
                    "sortAscending":  ": Columna Ascendente",
                    "sortDescending": ": Columna Descendente",
                }
            },
            columnDefs: [
                { orderable: false, targets: [3,2]}
            ],
            "lengthMenu": [ 5, 10, 15, 20, 30, 100],

        });


    </script>
{% endblock %}