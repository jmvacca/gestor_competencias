    <div class="row">
        <div class="col-12">
            <h5>Participantes: </h5>
            <table class="table table-striped table-bordered table-hover" id="tablaP1">

                <thead class="thead-dark">
                <tr>

                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Foto</th>
                </tr>
                </thead>

                <tbody>
                {% for participante in lista_participantes %}
                    <tr>

                        <td>{{ participante.nombre}}</td>
                        <td>{{ participante.email}}</td>
                        {% if participante.imagenFileName %}
                            <td><img src="{{ asset('uploads/images/' ~ participante.imagenFilename) }}" width="100" height="100" class="img-thumbnail"> </td>
                        {% else %}
                            <td><img src="{{ asset('uploads/images/default.jpg') }}" width="100" height="100" class="img-thumbnail"> </td>
                        {% endif %}
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="11">No se encontraron participantes.</td>
                    </tr>
                {% endfor %}
